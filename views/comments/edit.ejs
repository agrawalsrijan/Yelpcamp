<%include ../partials/header %>
	
	<!-- styling of the forms -->

	<div class="container">
		<div class="row">
			<h3 style="text-align: center;">Edit Comment</h3>
			<div style="width: 30%;margin: 30px auto;">
				<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">

					</div>

					<div class="form-group">
						<button class="btn btn-md btn-success btn-block">Submit</button>
					</div>
				</form>
				<a href="/campgrounds">Go Back</a>
			</div>
		</div>
	</div>











<%include ../partials/footer%>