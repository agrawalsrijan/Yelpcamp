<% include ../partials/header%> <!-- //include html header boilerplate -->
	
  <!-- navbar was made and shifted to header.ejs --> 

  

	<!-- add jumbotron -->
	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h2>Welcome to Yelpcamp</h2>
				<p>View our handpicked campgrounds from all over the world</p>
				<p>
					<a class="btn btn-primary btn-md" href="/campgrounds/new">Add New Campground</a>
				</p>
			</div>
		</header>
	</div>

	<!-- add campgrounds data in grid -->
	<div class="container">
		<div class="row text-center" style="display:flex;flex-wrap: wrap;">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-md-4 col-sm-6">
					<div class="thumbnail">
						<img src="<%= campground["image"] %>">
						<div class="caption">
							<h4><%= campground["name"] %></h4>
						</div>
						<p>
							<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
						</p>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
	
	<div class="row text-center">
	    <% if (pages && pages > 0) { %>
	    <ul class="pagination text-center">
	        <% if (current == 1) { %>
	        <li class="disabled"><a>First</a></li>
	        <% } else { %>
	        <li><a href="/campgrounds">First</a></li>
	        <% } %>
	 
	        <% if (current == 1) { %>
	        <li class="disabled"><a>«</a></li>
	        <% } else { %>
	        <li><a href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
	        <% } %>
	 
	        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
	        <% if (i !== 1) { %>
	        <li class="disabled"><a>...</a></li>
	        <% } %>
	        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
	        <% if (i == current) { %>
	        <li class="active"><a><%= i %></a></li>
	        <% } else { %>
	        <li><a href="/campgrounds?page=<%= i %>"><%= i %></a></li>
	        <% } %>
	        <% if (i == Number(current) + 4 && i < pages) { %>
	        <li class="disabled"><a>...</a></li>
	        <% } %>
	        <% } %>
	 
	        <% if (current == pages) { %>
	        <li class="disabled"><a>»</a></li>
	        <% } else { %>
	        <li><a href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
	        <% } %>
	 
	        <% if (current == pages) { %>
	        <li class="disabled"><a>Last</a></li>
	        <% } else { %>
	        <li><a href="/campgrounds?page=<%= pages %>">Last</a></li>
	        <% } %>
	    </ul>
	    <% } %>
	</div>


<% include ../partials/footer%> <!-- include html footer boilerplate -->